---
import Card from "~/components/Card.astro";
import Layout from "~/layouts/MainLayout.astro";
import Socials from "~/components/Socials.astro";
---

<Layout title="olzhas dev">
  <main class="w-full">
    <div class="flex w-full flex-col items-center pt-[25vh]">
      <svg class="w-full" height="130">
        <text
          id="page-title-overlay"
          x="50%"
          y="50%"
          dy=".35em"
          text-anchor="middle"
          class="font-display text-9xl"
        >
          Olzhas
        </text>
      </svg>

      <h2 class="font-pix text-3xl">software engineer / web developer</h2>
    </div>
    <Socials />
  </main>
</Layout>
<style>
  @keyframes titleAnimation {
    0%,
    100% {
      /* fill: rgba(72, 138, 204, 0); */
      stroke-dashoffset: 0;
      stroke-dasharray: 2% 10%;
    }
    25%,
    75% {
      /* fill: rgba(72, 138, 204, 0); */
      stroke-dashoffset: 100%;
      stroke-dasharray: 3% 8%;
    }

    50% {
      /* fill: rgba(72, 138, 204, 1); */
      stroke-dashoffset: 0%;
      stroke-dasharray: 4% 6%;
    }
  }

  #page-title-overlay {
    /* text-shadow: 0px 0px 2px gray; */
    stroke: rgb(0, 0, 0);
    stroke-width: 2;
    stroke-dasharray: 2% 5%;
    animation: titleAnimation 300s ease infinite;
  }
</style>
